<?xml version="1.0" encoding="UTF-8"?>

<configuration>

    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} %-5p %-4L %c{1} - %m%n"/>
        </Console>

        <RollingFile name="scVMLibFile" fileName="output/test-ethereum.log"
          filePattern="output/test-ethereum.log-%d{yyyy-MM-dd}-%i.log" >
            <PatternLayout>
                <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5p %-4L %c{1} - %m%n</pattern>
            </PatternLayout>
            <Policies>
                <SizeBasedTriggeringPolicy size="100 MB" />
            </Policies>
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>
    </Appenders>

    <Loggers>
        <Root level="INFO">
            <Filters>
                <!-- In the following, enable a marker with onMatch="ACCEPT" and disable with onMatch="DENY". -->
            </Filters>
            <!--<AppenderRef ref="Console"/>-->
            <AppenderRef ref="fileLog"/>
        </Root>
        <Logger name="org.springframework" level="ERROR" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="scVMLibFile"/>
        </Logger>
        <Logger name="state" level="WARN" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="scVMLibFile"/>
        </Logger>
        <Logger name="trie" level="ERROR" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="scVMLibFile"/>
        </Logger>
        <Logger name="net" level="DEBUG" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="scVMLibFile"/>
        </Logger>
        <Logger name="execute" level="ERROR" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="scVMLibFile"/>
        </Logger>
        <Logger name="VM" level="ERROR" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="scVMLibFile"/>
        </Logger>
        <Logger name="pending" level="DEBUG" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="scVMLibFile"/>
        </Logger>
        <Logger name="sync" level="DEBUG" additivity="false">
